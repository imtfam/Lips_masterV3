<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D1EAF5"
    android:orientation="vertical"
    tools:context=".Process">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.8"
        android:backgroundTint="#000000"
        tools:visibility="visible">

        <ImageButton
            android:id="@+id/buttonBack"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="252dp"
            android:layout_marginBottom="0dp"
            android:layout_toStartOf="@+id/buttonSave"
            android:backgroundTint="#0000FFFF"
            app:srcCompat="@drawable/arrow_left_icon_153697" />

        <ImageButton
            android:id="@+id/buttonSave"
            android:layout_width="54dp"
            android:layout_height="44dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="7dp"
            android:backgroundTint="#0000FFFF"
            app:srcCompat="@drawable/save" />

        <ImageButton
            android:id="@+id/buttonshare"
            android:layout_width="47dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginTop="-6dp"
            android:layout_marginEnd="1dp"
            android:layout_toStartOf="@+id/buttonSave"
            android:backgroundTint="#0000FFFF"
            app:srcCompat="@drawable/sharing" />

    </RelativeLayout>


    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.3">


        <com.ortiz.touchview.TouchImageView
            android:id="@+id/imageView_show"
            android:layout_width="match_parent"
            android:layout_height="490dp"
            android:layout_marginEnd="0dp"
            app:srcCompat="@drawable/selectpicture"
            tools:srcCompat="@drawable/select_picture" />


        <ImageButton
            android:id="@+id/btn_camera"
            android:layout_width="73dp"
            android:layout_height="70dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="6dp"
            android:layout_marginBottom="19dp"
            android:backgroundTint="#0000FFFF"
            app:srcCompat="@drawable/officeicons_6_89731" />

        <ImageButton
            android:id="@+id/open_gellery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="292dp"
            android:layout_marginBottom="18dp"
            android:backgroundTint="#0000FFFF"
            app:srcCompat="@drawable/gallery" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/Reletive_Process"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.6">


    </RelativeLayout>
</LinearLayout>
